<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_banner_image_column_bean"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="@dimen/dp_10"/>

    <TextView
        android:id="@+id/iv_title_column_bean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_banner_image_column_bean"
        android:layout_marginTop="@dimen/dp_36"
        android:textColor="@color/title" />

    <TextView
        android:id="@+id/iv_author_column_bean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_title_column_bean"
        android:layout_below="@id/iv_title_column_bean"
        android:layout_marginTop="@dimen/dp_4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_look_all"
        android:paddingBottom="@dimen/dp_6"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:paddingTop="@dimen/dp_6"
        android:text="+关注"
        android:textColor="@color/backred" />
</RelativeLayout>