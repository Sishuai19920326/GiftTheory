<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_store_up_recyclerView_cover_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@mipmap/icon_commodity_more"
        android:scaleType="center"
        android:layout_centerHorizontal="true"
        android:background="#dddddd"/>

    <TextView
        android:id="@+id/tv_store_up_recyclerView_short_description"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/iv_store_up_recyclerView_cover_image"
        android:ellipsize="end"
        android:lines="1"
        android:text="短"
        android:textColor="@color/title"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_store_up_recyclerView_price_skus_first"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@id/tv_store_up_recyclerView_short_description"
        android:layout_marginTop="@dimen/dp_10"
        android:text="价钱"
        android:layout_centerHorizontal="true"
        android:textColor="@color/price" />
</RelativeLayout>