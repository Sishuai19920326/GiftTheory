<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/rl_popupWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_switch_channels"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="切换频道"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"/>
        <ImageView
            android:id="@+id/iv_close_channels"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@mipmap/arrow_index_up"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>

    <com.lanou3g.gifttheory.util.MyGridView
        android:id="@+id/gridView_popupWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_popupWindow"
        android:numColumns="4"></com.lanou3g.gifttheory.util.MyGridView>
</RelativeLayout>