<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_column_strategy_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="栏目"
        android:layout_margin="@dimen/dp_10"/>

    <TextView
        android:id="@+id/tv_look_all_strategy_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableEnd="@mipmap/icon_right_arrow"
        android:layout_margin="@dimen/dp_10"
        android:text="查看全部" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_strategy_header"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_column_strategy_header">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
