<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="360dp">

            <RelativeLayout
                android:id="@+id/rl_money_popupWindow"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/iv_image_popupWindow"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_price_popupWindow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_image_popupWindow"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/iv_image_popupWindow"
                    android:text="价钱"
                    android:textColor="@color/price"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_stock_popupwindow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_price_popupWindow"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_toRightOf="@id/iv_image_popupWindow"
                    android:text="库存"
                    android:textColor="@color/title"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_selected_popupWindow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_stock_popupwindow"
                    android:layout_below="@id/tv_stock_popupwindow"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/title"
                    android:text="已选"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/iv_close_popupWindow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/btn_close_login"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_10"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/defult" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_classify_popupWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_money_popupWindow">

                <TextView
                    android:id="@+id/tv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:text="规格"
                    android:textColor="@color/title"/>

                <RadioGroup
                    android:id="@+id/radioGroup_popupWindow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_stock"
                    android:orientation="horizontal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/radioGroup_popupWindow"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/defult" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_num_popupWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_classify_popupWindow">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/title"
                    android:text="购买数量"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_add_popupWindow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@mipmap/btn_increase_normal" />

                <EditText
                    android:id="@+id/et_numb_popupWindow"
                    android:layout_width="30dp"
                    android:layout_height="31dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_add_popupWindow"
                    android:background="@drawable/shape_gv_home"
                    android:gravity="center"
                    android:textColor="@color/title"
                    android:text="1"
                    android:inputType="number" />

                <ImageView
                    android:id="@+id/iv_minus_popupWindow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/et_numb_popupWindow"
                    android:src="@mipmap/btn_reduce_disabled" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/iv_add_popupWindow"
                    android:background="@color/defult" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_buy_channels">


                <TextView
                    android:id="@+id/tv_cart_gift_details"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"

                    android:background="#FA4F64"
                    android:gravity="center"
                    android:text="加入购物车"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_cart_gift_details"
                    android:background="#F91936"
                    android:gravity="center"
                    android:text="立即购买"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
