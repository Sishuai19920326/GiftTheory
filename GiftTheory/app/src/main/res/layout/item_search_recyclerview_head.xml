<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rl_search_head"
    android:layout_margin="@dimen/dp_10">
    <ImageView
        android:id="@+id/iv_head_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_start"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_head_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_head_search"
        android:text="大家都在搜"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_centerVertical="true"/>
</RelativeLayout>

    <com.lanou3g.gifttheory.util.MyGridView
        android:id="@+id/gridView_search_head"
        android:layout_below="@id/rl_search_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:numColumns="5">
    </com.lanou3g.gifttheory.util.MyGridView>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_10"
    android:background="@color/defult"
    android:layout_below="@id/gridView_search_head"
    android:layout_marginTop="@dimen/dp_10"/>
</RelativeLayout>