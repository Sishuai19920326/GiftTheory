<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
<ImageView
    android:id="@+id/iv_search_head"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:src="@mipmap/icon_clock"
    android:layout_margin="15dp"
    android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_search_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容"
        android:layout_toRightOf="@id/iv_search_head"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/title"
        android:textSize="16sp"/>
    <ImageView
        android:id="@+id/iv_search_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/btn_close"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:layout_centerVertical="true"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/iv_search_head"
        android:background="@color/defult"/>
</RelativeLayout>