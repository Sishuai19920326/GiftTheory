<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/iv_store_down_cover_image"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_store_down_bean_short_description"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/iv_store_down_cover_image"
        android:text="短"
        android:textSize="@dimen/dp_12"
        android:textColor="@color/title"
        android:lines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/tv_store_down_title"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_below="@id/tv_store_down_bean_short_description"
        android:textSize="@dimen/dp_12"
        android:text="描述"/>
    <TextView
        android:id="@+id/tv_store_up_price_skus_first"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@id/tv_store_down_title"
        android:text="价钱"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/price"/>
</RelativeLayout>