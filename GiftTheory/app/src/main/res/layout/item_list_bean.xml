<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cover_image_list_bean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_short_description_list_bean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_cover_image_list_bean"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="1"
        android:text="标题"
        android:textColor="@color/title"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_num_list_bean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_short_description_list_bean"
        android:padding="3dp"
        android:text="排名"
        android:textSize="@dimen/dp_10"
        android:textColor="@color/backred"
        android:background="@color/backnum"/>
    <TextView
        android:id="@+id/tv_name_list_bean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_below="@id/tv_short_description_list_bean"
        android:text="描述"
        android:layout_toRightOf="@id/tv_num_list_bean"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_price_list_bean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="价钱"
        android:textColor="@color/price"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:textSize="@dimen/dp_12" />
</RelativeLayout>