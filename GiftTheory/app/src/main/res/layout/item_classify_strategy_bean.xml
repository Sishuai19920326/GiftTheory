<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name_strategy_bean"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_margin="@dimen/dp_10"
        android:text="栏目" />

    <TextView
        android:id="@+id/tv_look_all_strategy_bean"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:drawableEnd="@mipmap/icon_right_arrow"
        android:text="查看全部"
        android:layout_margin="@dimen/dp_10"/>

    <com.lanou3g.gifttheory.util.MyNotMoveRecyclerView
        android:id="@+id/recyclerView_strategy_bean"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/tv_name_strategy_bean"
        />
</RelativeLayout>