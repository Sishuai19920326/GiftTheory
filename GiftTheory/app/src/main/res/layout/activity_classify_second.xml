<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_classify_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lanou3g.gifttheory.activity.ClassifySecondActivity">

    <RelativeLayout
        android:id="@+id/rl_title_classify_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back_classify_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_10"
            android:src="@mipmap/btn_back_grey" />

        <TextView
            android:id="@+id/tv_title_classify_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/dp_10"
            android:textColor="@color/title"
            android:textSize="@dimen/titleSize" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_classify_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title_classify_second"
        android:background="@color/white"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
