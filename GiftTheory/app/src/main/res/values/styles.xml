<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="radioButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@drawable/radiobutton_text_color_bg</item>
        <item name="android:textSize">10sp</item>
        <item name="android:button">@null</item>
    </style>
    <style name="imageHome">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/anim_buttom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_buttom_out</item>
    </style>
    <!--<style name="PopupWindowActivity" parent="android:Theme.Dialog">-->

    <style name="PopupWindowActivity">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->

        <!--<item name="android:windowIsFloating">true</item>-->
        <!--;!&#45;&#45; 是否浮现在activity之上 &ndash;&gt;-->

        <item name="android:windowIsTranslucent">true</item>
        <!--;!&#45;&#45; 半透明 &ndash;&gt;-->
        <item name="android:windowNoTitle">true</item>
        <!--;!&#45;&#45; 无标题 &ndash;&gt;-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--;!&#45;&#45; 背景透明 &ndash;&gt;-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--;!&#45;&#45; 模糊 &ndash;&gt;-->
    </style>
</resources>
